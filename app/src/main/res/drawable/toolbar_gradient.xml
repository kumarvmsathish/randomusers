<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="@color/toolbar_gradient_end"
                android:endColor="@color/colorPrimary"
                android:gradientRadius="45dp"
                android:angle="180"
                />
            <!--apply a border around button-->
            <!--            <stroke android:color="#006400" android:width="2dp" />-->
            <!-- make the button corners rounded-->
            <corners android:radius="0dp"/>
        </shape>


    </item>

    <item>

        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/toolbar_gradient_end"
                android:angle="180"

                android:gradientRadius="45"
                />
            <!--apply a border around button-->
            <!--            <stroke android:color="#006400" android:width="2dp" />-->
            <!-- make the button corners rounded-->
            <corners android:radius="0dp"/>
        </shape>

    </item>

</selector>